{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Collector",
  "version": "1.0.0",
  "identifier": "com.collector.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/**"]
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main windows",
          "windows": ["capture", "settings"],
          "permissions": [
            "core:default",
            "core:event:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:event:allow-emit-to",
            "core:window:default",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-close",
            "core:window:allow-center",
            "core:window:allow-set-focus",
            "core:window:allow-unminimize",
            "core:webview:default",
            "core:webview:allow-internal-toggle-devtools",
            "dialog:allow-open"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "capture",
        "title": "Collector",
        "width": 330,
        "height": 600,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "resizable": true,
        "fullscreen": false,
        "center": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "dragDropEnabled": true
      },
      {
        "label": "settings",
        "title": "Collector - Einstellungen",
        "url": "settings.html",
        "width": 520,
        "height": 680,
        "visible": false,
        "resizable": true,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0"
    }
  },
  "plugins": {}
}
